{
    "get": {
        "tags": [ "Profiles" ],
        "security": [ {}, { "ApiKeyAuth": [] } ],
        "summary": "Get list of profile categories",
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "User identifier, of 'self'",
                "schema": { "oneOf": [
                    { "type": "string", "format": "uuid" },
                    { "type": "string", "enum": [ "self" ] },
                ]},
                "required": true
            },
            {
                "in": "query",
                "name": "category",
                "description": "Desired category to fetch",
                "schema": {
                    "$ref": "#/components/schemas/ProfileCategoriesList"
                }
            }
        ],
        "responses": {
            200: {
                "description": "OK",
                "content": {
                    "application/json": { "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "category": {
                                    "$ref": "#/components/schemas/ProfileCategoriesList"
                                },
                                "content": {
                                    "$ref": "#/components/schemas/ProfileCategory"
                                }
                            }
                        }
                    }}
                }
            },
            400: { "$ref": "#/components/responses/WrongRequest" },
            401: { "$ref": "#/components/responses/Unauthenticated" },
            403: { "$ref": "#/components/responses/Unauthorized" },
            500: { "$ref": "#/components/responses/Internal" }
        }
    }
}
